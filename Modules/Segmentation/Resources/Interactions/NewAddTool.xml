  <statemachine name="NewAddTool">
    <state name="Active" ID="1" startstate="true">
      <transition event_class="MouseMoveEvent" event_variant="PrimaryButtonMoved" target="Active" >
        <action name="Drawing"/>
      </transition>
      <transition event_class="MouseReleaseEvent" event_variant="PrimaryButtonReleased" target="Active" >
        <action name="EndDrawing"/>
      </transition>
    </state>
  </statemachine>
